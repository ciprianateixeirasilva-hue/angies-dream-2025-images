name: Sanity

on:
  workflow_dispatch:

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Create tiny worker (heredoc test)
        shell: bash
        run: |
          cat > worker.py << 'PY'
print("SANITY OK")
PY

      - name: Run worker
        run: python worker.py
